<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="UP" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entidades.Pessoa</class>
    <class>entidades.PessoaFisica</class>
    <class>entidades.ClientePessoaFisica</class>
    <class>entidades.ClientePessoaJuridica</class>
    <class>entidades.Empresa</class>
    <class>entidades.FormaPagamento</class>
    <class>entidades.Fornecedor</class>
    <class>entidades.PessoaJuridica</class>
    <class>entidades.PrestacaoServico</class>
    <class>entidades.Produto</class>
    <class>entidades.Usuario</class>
    <class>entidades.Venda</class>
    <class>entidades.Administrador</class>
    <class>entidades.Parcela</class>
    <class>entidades.Tecnico</class>
    <class>entidades.Vendedor</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/fall?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
